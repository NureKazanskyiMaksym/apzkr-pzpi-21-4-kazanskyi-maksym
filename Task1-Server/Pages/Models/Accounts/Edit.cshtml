@page
@model EquipmentWatcher.Pages.Models.Accounts.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Account</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Account.AccountID" />
            <div class="form-group">
                <label asp-for="Account.PersonID" class="control-label"></label>
                <select asp-for="Account.PersonID" class="form-control" asp-items="ViewBag.PersonID"></select>
                <span asp-validation-for="Account.PersonID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Account.Login" class="control-label"></label>
                <input asp-for="Account.Login" class="form-control" />
                <span asp-validation-for="Account.Login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Account.Password" class="control-label"></label>
                <input asp-for="Account.Password" class="form-control" />
                <span asp-validation-for="Account.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Account.LastSession" class="control-label"></label>
                <input asp-for="Account.LastSession" class="form-control" />
                <span asp-validation-for="Account.LastSession" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
