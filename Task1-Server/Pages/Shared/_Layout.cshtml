@using EquipmentWatcher.Models
@using Microsoft.AspNetCore.Identity
@using System.Security.Claims
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EquipmentWatcher</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EquipmentWatcher.styles.css" asp-append-version="true" />
    <script src="~/js/site.js" asp-append-version="true"></script>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">EquipmentWatcher</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        @if (User.HasClaim(ClaimTypes.Role, "Administrator") || User.HasClaim(ClaimTypes.Role, "Secretary"))
                        {
                            @if (User.HasClaim(ClaimTypes.Role, "Administrator"))
                            {
                                <li class="nav-item">
                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            Models
                                        </a>
                                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                            <a class="dropdown-item" asp-area="" asp-page="/Models/Persons/Index">Persons</a>
                                            <a class="dropdown-item" asp-area="" asp-page="/Models/Accounts/Index">Accounts</a>
                                            <a class="dropdown-item" asp-area="" asp-page="/Models/AccessDevices/Index">Devices</a>
                                            <a class="dropdown-item" asp-area="" asp-page="/Models/AccessTokens/Index">Access Tokens</a>
                                            <a class="dropdown-item" asp-area="" asp-page="/Models/Permissions/Index">Permissions</a>
                                            <a class="dropdown-item" asp-area="" asp-page="/Models/Accesses/Index">Accesses</a>
                                            <a class="dropdown-item" asp-area="" asp-page="/Models/Interactions/Index">Interactions</a>
                                        </div>
                                    </li>
                                </li>
                            }
                            <li class="nav-item">
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Reports
                                    </a>
                                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                        <a class="dropdown-item" asp-area="" asp-page="/Reports/Persons/Index">Persons</a>
                                        <a class="dropdown-item" asp-area="" asp-page="/Reports/Accounts/Index">Accounts</a>
                                        <a class="dropdown-item" asp-area="" asp-page="/Reports/AccessDevices/Index">Devices</a>
                                        <a class="dropdown-item" asp-area="" asp-page="/Reports/AccessTokens/Index">Access Tokens</a>
                                        <a class="dropdown-item" asp-area="" asp-page="/Reports/Permissions/Index">Permissions</a>
                                        <a class="dropdown-item" asp-area="" asp-page="/Reports/Accesses/Index">Accesses</a>
                                        <a class="dropdown-item" asp-area="" asp-page="/Reports/Interactions/Index">Interactions</a>
                                    </div>
                                </li>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - EquipmentWatcher - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>